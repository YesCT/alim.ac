gem "middleman-blog", "~> 3.2"

# For feed.xml.builder
gem "builder", "~> 3.0"

# Article summaries
gem "nokogiri"

# Syntax highlighting
gem "middleman-syntax"

# Markdown
#gem "redcarpet", github: "vmg/redcarpet"
gem "kramdown"

# Aliases
gem "middleman-alias"
